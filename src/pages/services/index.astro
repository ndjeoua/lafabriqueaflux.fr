---
import Layout from "@layouts/Layout.astro";
import SimpleHero from "@components/global/simple-hero/simple-hero.astro";
import Feature from "@components/global/feature/feature.astro";
---

<Layout title="Services | La Fabrique à Flux">
  <SimpleHero
    title="Libérez votre potentiel"
    description="Nos services d'automatisation sont conçus pour supprimer les tâches à faible valeur ajoutée et sécuriser vos revenus."
  />

  <div class="py-20 space-y-0">
    <Feature
      title="Relances factures automatisées"
      description="Récupérez votre trésorerie sans effort. Scénarios de relance intelligents, personnalisation par client et reporting en temps réel."
      button={{ text: "Découvrir la solution détaillée", link: "/services/relance-factures/" }}
      image="/images/feature/feature-card-one.png"
      image_alt="Relance Factures"
    />

    <Feature
      title="Workflows & Automatisations"
      description="Connectez vos outils (CRM, Mailing, Gestion) pour automatiser vos tâches répétitives via n8n. Gain de temps garanti."
      button={{ text: "Parlons de vos besoins", link: "/contact/" }}
      image="/images/feature/feature-card-two.png"
      image_alt="Workflows n8n"
      reversed={true}
    />

    <Feature
      title="Data & Reporting"
      description="Nettoyage, consolidation et visualisation de vos données. Prenez des décisions basées sur des chiffres fiables, pas sur l'intuition."
      button={{ text: "Demander un audit data", link: "/contact/" }}
      image="/images/feature/feature-card-three.png"
      image_alt="Data et Reporting"
    />
  </div>

  <section class="py-24 bg-primary/5 text-center">
    <a href="/contact/" class="inline-block bg-primary text-white font-bold px-8 py-4 rounded-xl hover:bg-primary/90 transition-colors">
      Demander un échange
    </a>
  </section>
</Layout>
