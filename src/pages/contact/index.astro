---
import Layout from "@layouts/Layout.astro";
import SimpleHero from "@components/global/simple-hero/simple-hero.astro";
import Form from "@components/global/form/form.astro";
---

<Layout title="Contact">
  <SimpleHero
    title="Contactez-nous"
    description="Décris ton besoin, je reviens vers toi rapidement."
  />

  <section class="py-16 bg-white overflow-hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
        <div>
          <h2 class="text-3xl font-bold mb-8">Travaillons ensemble</h2>
          <p class="text-gray-600 mb-8 text-lg leading-relaxed">
            Une question ? Un projet d'automatisation ? N'hésitez pas à nous envoyer un message ou un email direct.
          </p>
          
          <div class="space-y-6">
            <div class="flex items-center gap-4">
              <div class="w-12 h-12 bg-primary/10 rounded-full flex items-center justify-center text-primary font-bold">@</div>
              <div>
                <p class="font-bold">Email</p>
                <a href="mailto:contact@lafabriqueaflux.fr" class="text-primary hover:underline">contact@lafabriqueaflux.fr</a>
              </div>
            </div>
            <div class="flex items-center gap-4">
              <div class="w-12 h-12 bg-primary/10 rounded-full flex items-center justify-center text-primary font-bold">!</div>
              <div>
                <p class="font-bold">Promesse</p>
                <p class="text-gray-600 italic">Réponse sous 24h à 48h maximum.</p>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-gray-50 p-8 rounded-2xl border border-gray-100">
          <Form
            title="Envoyer un message"
            description="Laissez-nous vos coordonnées, nous vous rappelons."
            button={{ text: "Demander un échange", link: "#" }}
          />
        </div>
      </div>
    </div>
  </section>
</Layout>
